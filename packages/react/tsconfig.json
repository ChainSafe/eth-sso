{
    "compilerOptions": {
        "target": "ES2021",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "composite": true,
        "outDir": "./dist/esm",
        "declarationDir": "./dist/types",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
    },
    "include": ["src", "tests"]
}