{
  "name": "@chainsafe/eth-sso-ui",
  "version": "1.0.0",
  "description": "Web component for displaying Eth SSO provider modal.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "yarn run build --watch",
    "clean": "rimraf dist",
    "lint": "yarn run lint:eslint && yarn run lint:lit-analyzer",
    "lint:eslint": "eslint '{src, test}/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod yarn run serve",
    "test:integration": "yarn playwright install-deps && yarn playwright install && yarn run test",
    "test": "yarn run test:dev && yarn run test:prod",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm my-element.bundled.js"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "ChainSafe <info@chainsafe.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "lit": "^3.0.0",
    "valtio": "1.11.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@open-wc/testing": "^3.1.5",
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@web/dev-server": "^0.4.1",
    "@web/dev-server-esbuild": "^1.0.1",
    "@web/dev-server-legacy": "^2.1.0",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-playwright": "^0.11.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "eslint": "^8.54.0",
    "eslint-plugin-prettier": "^5.0.1",
    "lit-analyzer": "^1.2.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^2.73.0",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "~5.2.0"
  },
  "customElements": "custom-elements.json"
}
